 <openerp>
    <data>
        <!-- Add Auto Line Rule ID field to existing view -->
        <record model="ir.ui.view" id="product_autoline_rules_form_view">
            <field name="name">Product.rule_ids</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Auto Lines">
                        <group>
                            <field name="rule_ids" domain="[('id','in',autoline.autoline.product_id)]"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

